<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.ToDoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar" />

    <style name="Theme.ToDoApp" parent="Base.Theme.ToDoApp">
        <item name="android:colorPrimary">@color/blue_dark</item>
        <item name="android:statusBarColor">@color/blue</item>
        <item name="colorAccent">@color/blue</item>

    </style>

    <style name="BackGround">
        <item name="android:background">
            @color/blue_dark
        </item>
    </style>
    <style name="TitleTextColor">
        <item name="android:titleTextColor">
            @color/blue_dark
        </item>
    </style>
    <style name="BottomNavigationColor">
        <item name="android:backgroundTint">
            @color/blue_gray
        </item>
    </style>

    <style name="TaskBackGround">
        <item name="android:background">
            @color/blue_gray
        </item>
    </style>

    <style name="AddNewTaskTextStyle">
        <item name="android:textSize">
            20sp
        </item>
        <item name="android:textStyle">
            bold
        </item>
        <item name="android:textColor">
            @color/white
        </item>
    </style>
</resources>