<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.ToDoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar" />

    <style name="Theme.ToDoApp" parent="Base.Theme.ToDoApp">
        <item name="android:colorPrimary">@color/green_mint</item>
        <item name="android:statusBarColor">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="BackGroundColor">
        <item name="android:background">
            @color/green_mint
        </item>
    </style>

    <style name="ToolbarTextStyle">
        <item name="android:titleTextColor">
            @color/white
        </item>
        <item name="android:textStyle">
            bold
        </item>
        <item name="android:textSize">
            20sp
        </item>
    </style>

    <style name="MonthNameTextStyle">
        <item name="android:textStyle">
            bold
        </item>
        <item name="android:textColor">
            @color/white
        </item>
        <item name="android:textSize">
            18sp
        </item>
    </style>

    <style name="BottomNavigationColor">
        <item name="android:backgroundTint">
            @color/white
        </item>
    </style>

    <style name="TaskBackGround">
        <item name="android:background">
            @color/white
        </item>
    </style>

    <style name="AddNewTaskTextStyle">
        <item name="android:textSize">
            20sp
        </item>
        <item name="android:textStyle">
            bold
        </item>
        <item name="android:textColor">
            @color/black
        </item>
    </style>
</resources>