<resources>
    <!--  Base application theme.  -->
    <style name="Base.Theme.ToDoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar" />

    <style name="Theme.ToDoApp" parent="Base.Theme.ToDoApp">
        <item name="android:colorPrimary">@color/blue</item>
        <item name="android:statusBarColor">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="BackGroundColor">
        <item name="android:background">@color/green_mint</item>
    </style>

    <style name="BottomNavigationColor">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="AddNewTaskTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="BackGroundColorForAddToDo">
        <item name="android:background">@color/white</item>
    </style>

    <style name="HintTitleDescriptionTextStyle">
        <item name="android:layout_margin">15dp</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="SelectAddDateTimeTextStyle">
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomDatePickerDialog" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="android:buttonBarPositiveButtonStyle">@style/CustomButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/CustomButtonStyle</item>
    </style>

    <style name="CustomTimePickerDialog" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="android:buttonBarPositiveButtonStyle">@style/CustomButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/CustomButtonStyle</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="ToolbarTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:titleMarginStart">155dp</item>
        <item name="android:titleTextColor">@color/white</item>
    </style>

    <style name="MonthNameTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TaskBackGround">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="TextStyleInItemCalender">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="ItemCalenderColor">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="TextStyleInItemTask">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="EditTaskBackground">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="EditTaskTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BoxBackgroundColor">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/blue</item>
        <item name="hintTextColor">@color/blue</item>
        <item name="android:layout_marginHorizontal">20dp</item>
    </style>

    <style name="TitleDescriptionTextStyle">
        <item name="android:padding">20dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

</resources>