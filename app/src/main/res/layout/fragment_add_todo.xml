<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/BackGroundColorForAddToDo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/id_addNewTaskText"
        style="@style/AddNewTaskTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_new_task_in_add_todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/id_titleEditText"
        style="@style/HintTitleDescriptionTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="name"
        android:hint="@string/enter_task_title_hint"
        app:layout_constraintTop_toBottomOf="@id/id_addNewTaskText" />

    <EditText
        android:id="@+id/id_descriptionEditText"
        style="@style/HintTitleDescriptionTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="name"
        android:hint="@string/enter_task_description_hint"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/id_titleEditText" />

    <TextView
        android:id="@+id/id_selectTaskDate"
        style="@style/SelectAddDateTimeTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_date_of_task"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_descriptionEditText" />

    <TextView
        android:id="@+id/id_selectTaskTime"
        style="@style/SelectAddDateTimeTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_time_of_task"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_selectTaskDate" />

    <Button
        android:id="@+id/id_addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:backgroundTint="@color/blue"
        android:padding="10dp"
        android:text="@string/text_in_add_bottom"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_selectTaskTime" />

</androidx.constraintlayout.widget.ConstraintLayout>

